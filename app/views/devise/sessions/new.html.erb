<% provide(:title, 'Sign in') %>


<div class="row">
  <div class="span5 offset2">
    <h1>  Sign in </h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => { :class => 'form-horizontal sfg_sign_in' }) do |f| %>
   <div class="control-group">
      <%= f.label :email, "Email ID", :class => 'control-label'  %>
      <div class="controls">
        <%= f.text_field :email , :class => 'text_field' %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :password, "Password", :class => 'control-label'  %>
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field' %>
      </div>
    </div>


        <div class="control-group" id="customText">
    <div class="controls">
    <div><%= f.submit "log in" %></div>
      </div>
       </div>

        <div class="control-group" id="customText">
          <div class="controls">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>
     </div>
        </div>


        <div class="control-group">
          <div class="controls">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>

                <%= link_to "Don't have an account, click here to Sign up", root_path %><br/>
            <% end -%>
          </div>
        </div>


<!--<%= render "devise/shared/links" %>-->

    <% end %>
  </div>

</div>