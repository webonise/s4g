<div class="row">
  <div class="code span14 offset 13"><h2>Manage Business</h2></div>
</div>
<br>
<div>
  <%= form_tag  :method => :get, :html => { :class => "bs-docs-example form-horizontal"} do %>

      <br>
      <br>
      <br>
      <table  class="table table-hover" id=" sfg_admin_manage_cause_table">
        <tr>
          <th>LOGOS</th>
          <th>BUSINESS NAME</th>
          <th>ACTIONS</th>
        </tr>
        <% @business.each do |business_company| %>
            <tr>

              <td class ="td1">
                <div class="control-group">
                  <%=  image_tag(business_company.logo,:class => "logo_image")%>
                </div>
              </td>
              <td class="td2">
                <div class="control-group">
                  <%=  business_company.business_name %>
                </div>
              </td>
              <td class="td2">
                <div class="control-group">
                  <span class="manage_cause_span"><%=  link_to "view" , business_company_path(business_company),:method => :get %></span>
                  <span class="manage_cause_span"> <%=  link_to "edit", edit_business_company_path(business_company),:method => :get%></span>
                  <span class="manage_cause_span "> <%=  link_to "delete" ,business_company_path( business_company),:confirm => 'Are you sure you want to delete this business?',:method => :delete,:id => "destroy-business" %></span>
                </div>
              </td>
            </tr>
        <%end %>
        <tr></tr>
        <tr></tr>
        <tr></tr>
      </table>
  <%end%>
</div>
