<div id="mymodal_business" class="modal hide fade in" aria-hidden="true" style = "display: none; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
  </div>

  <div class="modal-body">
    <fieldset>
      <legend> company Details </legend>


      <table id="show_table" class="view_cause_table">

            <tr>
              <td>Name</td>
              <td> <%=  business.business_name%> </td>
            </tr>

            <tr>
              <td>About the Company </td>
              <td><%=  business.description  %>  </td>
            </tr>

            <tr>
              <td> Office Location </td>
              <td> <%=  business.address %> </td>
            </tr>

            <tr>
              <td>Logo</td>
              <td> <%=  image_tag(business.business_logo,:class =>"img1") %> </td>
            </tr>

            <tr>
              <td>Company Website </td>
              <td> <%=  business.business_website %> </td>
            </tr>
            <tr>
              <td>Company contact </td>
              <td> <%=  business.contact %> </td>
             </tr>

      </table>
      <br>
      <br>

    </fieldset>

  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
</div>