<div class="control-group">
  <%= label :name, "Name", :class => 'control-label' %>
  <div class="controls">
    <%= text_field :first_name , :class => 'text_field custom-text', :colspan => 2 %>

    <%= text_field :last_name, :class => 'text_field custom-text', :rowspan => 4 %>
  </div>
</div>

<div class="control-group">
  <%= label :email, "Email ID", :class => 'control-label'  %>
  <div class="controls">
    <%= text_field :email , :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
  <%= label :password, "Password", :class => 'control-label'  %>
  <div class="controls">
    <%= password_field :password, :class => 'text_field' %>
  </div>
</div>


<div class="control-group">
  <%= label :password_confirmation, "Confirm Password", :class => 'control-label'  %>
  <div class="controls">
    <%= password_field :password_confirmation , :class => 'text_field'%>
  </div>
</div>