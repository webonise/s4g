<div id="mymodal" class="modal hide fade in" aria-hidden="true" style = "display: none; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Businesses associated with Cause</h3>
  </div>
  <div class="modal-body">
    <h5>Businesses supporting to this Cause</h5>
    <ol>
      <% if businesses.present? %>
          <%  businesses.each do |business|%>

              <li><%= business.business_name%></li>

          <%end %>
      <% else %>
          None
      <% end %>
    </ol>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
</div>