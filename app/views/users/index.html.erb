<h1>Listing users</h1>
 
<table>
  <tr>
    <th>Users</th>
    <th>Actions</th>
    <th></th>
    <th></th>
  </tr>
 
<% @users.each do |usr| %>
  <tr>
    <td>User <%= usr.person_id%></td>
    <td><%= link_to 'View', usr %></td>
    <td> <% if current_user.admin? %> <%= link_to 'Edit', edit_user_path(usr) %> <% end %></td>
    <td> <% if current_user.admin? %> <%= link_to 'Delete', usr, :confirm => 'Are you sure?', :method => :delete %> <% end %></td>
  </tr>
<% end %>
</table>
 
<br />