<div class="row">
  <div class="code span14 offset 13"><h2>Select Businesses associated with Causes........</h2></div>
</div>
<br>
<%= form_tag save_business_user_path(@user), :method => :post,:html => { :class => "bs-docs-example form-horizontal"} do %>

    <table class="table table-hover">

      <% @user_businesses.each do |business| %>
          <tr>

            <td class = "td1">
              <div class="control-group">
                <%= check_box_tag "business_select[]", business.id , true %>
              </div>
            </td>
            <td>
              <div class="control-group">
                <%=  business.business_name %>
              </div>
            </td>

      <%end %>
      <% @all_businesses.each do |business| %>
          <tr>

            <td class = "td1">
              <div class="control-group">
                <%= check_box_tag "business_select[]", business.id %>
              </div>
            </td>
            <td>
              <div class="control-group">
                <%=  business.business_name %>
              </div>
            </td>

      <%end %>

      <tr>
        <td></td>
        <td></td>
        <td>
          <div class="control-group">
            <%#= submit_tag 'Take me to my dashboard' , class: "btn ",id:"create_cause_btn" ,  :onsubmit => "this.disabled = true" %>
          </div>

        </td>
      </tr>

    </table>
    <%= submit_tag 'Take me to my dashboard' , class: "btn ",id:"create_cause_btn" ,  :onsubmit => "this.disabled = true" %>
<%end %>









