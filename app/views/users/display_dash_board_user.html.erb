<% provide(:title, 'User Dashboard') %>

<!--<div class="span7offset5">-->

      <div class="well the-fieldset">
        <div id="heading_recent_post">
          <legend class="the-legend"> RECENT POSTS</legend>
        </div>
        <div class="pagination">
          <ol class="posts">

            <% @posts.each do |post|  %>
                <li>
                  <% if (post.content =~ URI::DEFAULT_PARSER.regexp[:ABS_URI]).nil?  %>
                      <span class="content"><%= post.content %></span>
                  <% else %>
                      <span class="content"><%=link_to post.content, post.content, :target => '_blank'%></span>
                  <% end %>

                  <span class="timestamp">
                    Posted <%= time_ago_in_words(post.created_at) %> ago.
                  </span>
                  <div class="">
                    <!--<a href="#" class="post-tag" title="" rel="tag">-->

                    <%= link_to image_tag('http://i.stack.imgur.com/L8rHf.png') + "Share", share_on_facebook_user_path(@user.id,:post => post), :method => 'get', :class => 'sponsor-tag-img' %>

                  </div>

                </li>
            <% end %>
          </ol>
          <%#= will_paginate @posts %>
        </div>
      </div>

