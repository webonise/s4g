<div class="row">
  <div class="code span14 offset 13"><h1>Select one cause form following list</h1></div>
</div>
<br></br>
<%= form_tag save_causes_user_path(@user), :method => :post ,:html => { :class => "bs-docs-example form-horizontal"} do %>

    <table class="table table-hover">

      <% @causes.each do |cause| %>
          <tr>

            <td>
              <div class="control-group">
                <%= check_box_tag "cause_select[]", cause.id , :class => "checkbox"%>
              </div>
            </td>
            <td width="10">
              <div class="control-group">
                <%= link_to image_tag(cause.logo,:class=>"img"), cause%>
              </div>
            </td>
            <td width="30">
              <div class="control-group">
                <%= cause.cause_name %>
              </div>
            </td>

            <td>
              <div class="control-group">
                <%= count_businesses(cause) %>
              </div>
            </td>
          </tr>
      <%end %>
      <tr></tr>
      <tr></tr>
      <tr></tr>
      <tr>
        <td></td>
        <td></td>
        <td>
          <div class="control-group">
            <%= submit_tag 'Next', :class => "btn" %>
          </div>
        </td>
      </tr>

    </table>
<%end%>
