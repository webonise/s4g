<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <% f.text_field :email %>

      <%= f.label :password %>
      <% f.text_field :password %>
      
      <%= f.submit "Save changes", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div> 
</div>   