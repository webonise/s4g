
<%#= javascript_include_tag "jquery.validate"%>


<% provide(:title, 'Sign up') %>

<div class="span5 offset2">
  <h3 class="user_signup">User Sign up</h3>


  <%= form_for @user, :method => :post, :html => { :class => 'form-horizontal sfg_user_sign_up colorbox', :id => "signup_colorbox" }  do |f| %>


      <%= render 'error_messages', :object => f.object %>

      <div class="control-group" id="customText">
        <%= f.label :name, "Name", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :first_name, :placeholder => "First Name", :class => 'custom_text'%>

          <%= f.text_field :last_name, :placeholder => "Last Name", :class => 'custom_text'%>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :email, "Email ID",  :class => 'control-label'  %>
        <div class="controls">
          <%= f.text_field :email , :placeholder => "Email",:class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, "Password", :class => 'control-label'  %>
        <div class="controls">
          <%= f.password_field :password, :placeholder => "Password", :class => 'text_field' %>
        </div>
      </div>


      <div class="control-group">
        <%= f.label :password_confirmation, "Confirm Password", :class => 'control-label'  %>
        <div class="controls">
          <%= f.password_field :password_confirmation , :placeholder => "Password Confirmation",:class => 'text_field', :id => 'pass_confirm'%>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit 'Sign Up', :class => "btn btn-large btn-primary" %>
        </div>
      </div>

  <% end %>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $(".sfg_user_sign_up").validate({
            rules: {
                "user[first_name]": {
                    required: true
                },
                "user[email]": {
                    required: true,
                    email: true
                },
                "user[password]": {
                    required:true,
                    minlength: 6
                },
                "user[password_confirmation]": {
                    equalTo: "#user_password"
                }
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    });

</script>






