<%#= form_for @business_company,:url => save_business_detail_business_user_path, :method => "post",
                 :html => { :class => 'form-horizontal sfg_get_business_details' } do |f| %>
<%#= render 'error_messages', object: f.object %>

<div class="control-group">
  <%= f.label :business_name, "Company Name", :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :business_name , :class => 'text_field'%>
  </div>
</div>

<div class="control-group">
  <%= f.label :business_website, "Company Website", :class => 'control-label' %>
  <div class="controls">
    <%= f.url_field :business_website , :class => 'url_field'%>
  </div>
</div>

<div class="control-group">
  <%= f.label :address, "Address", :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :address, :placeholder => "Address", :class => 'text_field' %>
    <br />
    <br />
    <%= f.text_field :city, :placeholder => "City", :class => 'text_field' %>
    <br />
    <br />
    <%= f.text_field :country, :placeholder => "Country", :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :business_logo, "Logo", :class => 'control-label' %>
  <div class="controls">
    <%= f.file_field :business_logo, :class => 'file_field' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :description, "About the company", :class => 'control-label' %>
  <div class="controls">
    <%= f.text_area :description, :size => "25x5"%>
  </div>
</div>

<%#= f.submit "Next", class: "btn btn-large btn-primary", :id => "sfg_submit_btn_get_b_details"%>
<%# end %>
