<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="span5 offset2">
    <h1> Please Enter your business details</h1>

    <%= form_for business_details_path(@business_company), :html => { :class => 'form-horizontal' } do |f| %>
        <%= render 'error_messages', object: f.object %>

        <div class="control-group">
          <%= f.label :business_name, "Business Name", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :business_name , :class => 'text_field'%>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :address, "Address", :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :address , :class => 'text_field'%>
          </div>
        </div>

        <%#= f.label :address %>
        <%#= f.text_field :address, placeholder="Line1" %>
        <br>
        <%#= f.text_field :address, placeholder="Line2"%>
        <br>
        <%#= f.text_field :address, placeholder="city" %>
        <br>
        <%#= f.text_field :address, placeholder="country"%>

        <%#=  f.label :logo, "Upload Logo" %>
        <%#= f.file_field :logo %>

        <%#= f.label :description %>
        <%#= f.text_area(:text, :size => '50x10') %>

        <%= f.submit "Next", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>