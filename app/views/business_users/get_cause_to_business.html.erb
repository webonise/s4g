<h1>Select one cause form following list</h1>

<table>
  <tr>
    <th></th>
    <th>Cause Name</th>
    <th>Description</th>
  </tr>
  <%= form_tag save_business_cause_business_user_path(@business_user), :method => "put" do %>
      <%#= render 'shared/error_messages', flash[:error] %>
      <% @causes.each do |cause|  %>
          <tr>
            <td><%= radio_button_tag "cause", cause.id %></td>
            <td><%= cause.cause_name %></td>
            <td><%= cause.description %></td>
      <% end %>
      <td><%= submit_tag("Next")%></td>
      </tr>
  <% end %>
</table>
</br>


