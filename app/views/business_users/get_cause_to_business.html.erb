<div class="row">
  <div class="code span14 offset 13"><h3>Select at most one cause from following list</h3></div>
</div>
<%= form_tag( save_business_cause_business_user_path(@business_user), :method => "put", :html => { :class => "bs-docs-example form-horizontal"}) do %>

    <table class="table table-hover">

      <tr>
        <th></th>
        <th></th>
        <th>Cause Name</th>
        <th>Description</th>
      </tr>
      <% @causes.each do |cause|  %>
          <tr>

            <td>
              <div class="control-group">
                <%= radio_button_tag "cause", cause.id, :class => "radio" %>
              </div>
            </td>
            <td class="td2">
              <div class="control-group">
                <%= link_to image_tag(cause.logo,:class=>"img"), cause %>
              </div>
            </td>
            <td>
              <div class="control-group">
                <%= cause.cause_name %>
              </div>
            </td>


            <td>
              <div class="control-group">
                <%= cause.description %>
              </div>
            </td>
          </tr>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>
          <div class="control-group">
            <%= submit_tag 'Next', :class => "btn btn-primary" %>
          </div>
        </td>
      </tr>

<% end %>
</table>
</br>


